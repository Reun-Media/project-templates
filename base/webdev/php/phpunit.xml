<?xml version="1.0" encoding="UTF-8"?>
<!--
  Reun Media PHPUnit configuration for Pest

  Run `./vendor/bin/pest \-\-generate-configuration` to create a new file with
  default configuration.

  @author Reun Media <company@reun.eu> @copyright 2020-2024 Reun Media

  @see https://github.com/Reun-Media/project-templates/blob/master/base/webdev/php/phpunit.xml

  @version 3.0.0

  @since 2024-07-25 Last modification date
-->

<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/10.3/phpunit.xsd"
  bootstrap="vendor/autoload.php"
  colors="true">
  <testsuites>
    <testsuite name="Test Suite">
      <directory suffix="Test.php">tests</directory>
    </testsuite>
  </testsuites>
  <source>
    <include>
      <directory suffix=".php">src</directory>
    </include>
  </source>
  <coverage pathCoverage="true">
    <report>
      <html outputDirectory="_phpunit/coverage-report-html"
        lowUpperBound="30"
        highLowerBound="70" />
    </report>
  </coverage>
</phpunit>
